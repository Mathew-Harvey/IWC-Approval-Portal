    <section class="wms-section document-control">
        <table class="control-table">
            <tr>
                <th>Document</th>
                <th>Revision Number</th>
                <th>Date</th>
                <th>Notes</th>
                <th>Changes Approved by</th>
            </tr>
            <tr>
                <td>{{jobNumber}}-Emergency Response Plan</td>
                <td>01</td>
                <td>{{revisionDate}}</td>
                <td>Document Created</td>
                <td>{{authorName}}</td>
            </tr>
