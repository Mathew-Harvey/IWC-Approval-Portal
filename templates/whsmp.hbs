    color: #166534;
}

.risk-medium,
.wms-table .risk-medium {
    background: #fef9c3 !important;
    color: #854d0e;
}

.risk-high,
.wms-table .risk-high {
    background: #fed7aa !important;
    color: #c2410c;
}

.risk-extreme,
.wms-table .risk-extreme {
    background: #fecaca !important;
    color: #dc2626;
