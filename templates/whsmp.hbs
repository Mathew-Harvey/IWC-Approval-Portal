/* Document Control */
.document-control {
    margin-top: 40px;
}

.control-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
    font-size: 10pt;
}

.control-table th,
.control-table td {
    border: 1px solid var(--gray-300);
    padding: 8px 12px;
    text-align: left;
}

.control-table th {
    background: var(--gray-100);
    width: 150px;
}

/* Copyright Notice */
.copyright-notice {
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid var(--gray-300);
    font-size: 9pt;
    color: var(--gray-600);
}

.copyright-year {
    font-weight: bold;
}

/* Page Break Helpers */
.page-break-before {
    page-break-before: always;
}

.page-break-after {
    page-break-after: always;
}

/* Print Styles */
@media print {
    body {
        background: white;
        margin: 0;
        padding: 0;
    }
    
    .wms-document.whsmp-document {
        max-width: none;
        width: 100%;
    }
    
    .wms-cover {
        height: 100vh;
    }
    
    .wms-section {
        page-break-inside: avoid;
    }
    
    .risk-low, .risk-medium, .risk-high, .risk-extreme {
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
    }
}
</style>

<div class="wms-document whsmp-document">
    <!-- Cover Page -->
