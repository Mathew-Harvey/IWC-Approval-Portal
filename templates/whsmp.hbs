.hierarchy-list li:nth-child(1) { border-left-color: #dc2626; }
.hierarchy-list li:nth-child(2) { border-left-color: #ea580c; }
.hierarchy-list li:nth-child(3) { border-left-color: #ca8a04; }
.hierarchy-list li:nth-child(4) { border-left-color: #16a34a; }
.hierarchy-list li:nth-child(5) { border-left-color: #2563eb; }
