}

.wms-toc h2 {
    font-size: 14pt;
    color: var(--primary);
    margin-bottom: 20px;
    border-bottom: 2px solid var(--primary);
    padding-bottom: 10px;
}

.toc-list {
    list-style: none;
    padding: 0;
}

.toc-list li {
    padding: 8px 0;
    border-bottom: 1px dotted var(--gray-300);
}

.toc-list a {
