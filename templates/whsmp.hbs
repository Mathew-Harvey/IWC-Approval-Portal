    text-decoration: none;
}

/* Sections */
.wms-section {
    padding: 20px 40px;
    border-bottom: 1px solid var(--gray-200);
}

.wms-section h2 {
    font-size: 14pt;
    color: var(--primary);
    margin-bottom: 15px;
    border-bottom: 2px solid var(--primary);
